@model List<CartItem>

<h1>Cart</h1>
<table class="table">
    <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Product.ProductName</td>
            <td>@item.Product.ProductPrice.ToString("C")</td>
            <td>@item.Quantity</td>
            <td>@Model.Sum(item => item.Product.ProductPrice * item.Quantity).ToString("C")</td>
        </tr>
    }
</table>

<form asp-action="Checkout" method="post">
    <button type="submit" class="btn btn-success">Checkout</button>
</form>

<a asp-action="Clear" class="btn btn-danger">Clear Cart</a>
