@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div style="max-width: 500px; margin: 50px auto; padding: 20px; border: 1px solid #ddd; border-radius: 8px;">
    <h1>Login</h1>

    <form asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" style="color: red; margin-bottom: 15px;"></div>

        <div style="margin-bottom: 15px;">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
            <span asp-validation-for="Email" style="color: red;"></span>
        </div>

        <div style="margin-bottom: 15px;">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
            <span asp-validation-for="Password" style="color: red;"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="padding: 10px 20px; background: #b8acf2; color: #212024; border: none; border-radius: 4px; cursor: pointer;">Login</button>
        <a asp-action="Register" style="margin-left: 10px;">Register</a>
    </form>

    <div style="margin-top: 20px; padding: 15px; background: #f8f9fa; border-radius: 4px;">
        <strong>Test Accounts:</strong><br />
        Admin: admin@abcretail.com / Qwerty123<br />
        Customer: johndoe@abcretail.com / Qwerty123
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}