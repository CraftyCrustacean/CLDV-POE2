@model C2B_POE1.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Product Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ProductName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ProductName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ProductDescription)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ProductDescription)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ProductPrice)</dt>
        <dd class="col-sm-10">@Model.ProductPrice.ToString("C")</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ProductImageURL))
            {
                <img src="@Model.ProductImageURL" alt="@Model.ProductName" width="150" />
            }
            else
            {
                <em>No image available</em>
            }
        </dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">
            @(ViewBag.CategoryLookup?[Model.PartitionKey] ?? "Unknown")
        </dd>
    </dl>
</div>

<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-rowKey="@Model.RowKey" asp-route-partitionKey="@Model.PartitionKey" class="btn btn-warning">Edit</a>
        <span>|</span>
    }

    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Customer"))
    {
        <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display: inline;">
            <input type="hidden" name="rowKey" value="@Model.RowKey" />
            <input type="hidden" name="returnUrl" value="@Url.Action("Details", "Products", new { rowKey = Model.RowKey })" />
            <input type="number" name="quantity" value="1" min="1" style="width: 60px; padding: 5px;" />
            <button type="submit" class="btn btn-success">Add to Cart</button>
        </form>
        <span>|</span>
    }

    <a asp-action="Index">Back to List</a>
</div>
