@model C2B_POE1.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RowKey" />

            <div class="form-group mb-3">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ProductImageURL))
            {
                <div class="form-group mb-3">
                    <label>Current Image</label>
                    <div class="mb-2">
                        <img src="@Model.ProductImageURL" alt="Product Image" style="max-width:200px; height:auto; border-radius:8px;" />
                    </div>
                </div>
            }

            <div class="form-group mb-3">
                <label class="control-label">Upload New Image</label>
                <input type="file" name="imageFile" class="form-control" />
            </div>

            <input type="hidden" asp-for="ProductImageURL" />

            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
