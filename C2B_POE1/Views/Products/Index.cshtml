@model IEnumerable<C2B_POE1.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
            <th>@Html.DisplayNameFor(model => model.ProductDescription)</th>
            <th>@Html.DisplayNameFor(model => model.ProductPrice)</th>
            <th>Image</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductDescription)</td>
                <td>@item.ProductPrice.ToString("C")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ProductImageURL))
                    {
                        <img src="@item.ProductImageURL" alt="@item.ProductName" width="80" />
                    }
                    else
                    {
                        <em>No image</em>
                    }
                </td>
                <td>
                    @(ViewBag.CategoryLookup != null && ViewBag.CategoryLookup.ContainsKey(item.PartitionKey)
                        ? ViewBag.CategoryLookup[item.PartitionKey]
                        : "Unknown")
                </td>
            <td>
                @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-rowKey="@item.RowKey" asp-route-partitionKey="@item.PartitionKey" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-rowKey="@item.RowKey" asp-route-partitionKey="@item.PartitionKey" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-rowKey="@item.RowKey" asp-route-partitionKey="@item.PartitionKey" class="btn btn-sm btn-danger">Delete</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-rowKey="@item.RowKey" asp-route-partitionKey="@item.PartitionKey" class="btn btn-sm btn-info">View</a>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display: inline;">
                                <input type="hidden" name="rowKey" value="@item.RowKey" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-sm btn-success">Add to Cart</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-success">Login to Purchase</a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
