@model IEnumerable<C2B_POE1.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Fulfilled</th>
            <th>Customer Email</th>
            <th>Order ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Fufilled)
                    {
                        <span style="color: #359c10; font-weight: bold;">Fulfilled</span>
                    }
                    else
                    {
                        <span style="color: #cfa717; font-weight: bold;">Pending</span>
                    }
                </td>
                <td>@item.PartitionKey</td>
                <td>@item.RowKey.Substring(0, 8)...</td>
                <td>
                    <a asp-action="Details" asp-route-rowKey="@item.RowKey">Details</a>

                    @if (!item.Fufilled)
                    {
                        <text> | </text>
                        <form asp-action="MarkFulfilled" method="post" style="display: inline;">
                            <input type="hidden" name="rowKey" value="@item.RowKey" />
                            <button type="submit" class="btn btn-sm btn-success"
                                    onclick="return confirm('Mark this order as fulfilled?');">
                                Mark Fulfilled
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>